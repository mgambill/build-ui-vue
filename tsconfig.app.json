{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "auto-imports.d.ts", "src/**/*", "src/**/*.vue", "lib/**/*", "lib/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./lib/*"],
      "@/*": ["./src/*"]
    }
  }
}
